---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="py-24 md:py-32 border-b border-border/40 bg-muted/10 relative overflow-hidden bg-grid-primary [mask-image:linear-gradient(to_bottom,white,transparent)]">
  <div class="container px-4 text-center animate-fade-up">
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary text-[10px] font-bold uppercase tracking-[0.2em] mb-12 shadow-sm border border-primary/20">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
      </span>
      Latest Insights
    </div>
    
    <h1 class="text-6xl font-extrabold tracking-tighter sm:text-8xl mb-8 font-heading text-primary leading-[0.9]">
      {title}
    </h1>
    <h2 class="text-xl font-medium text-muted-foreground mb-16 sm:text-2xl max-w-2xl mx-auto leading-relaxed italic">
      {subtitle}
    </h2>
    
    <div class="flex items-center justify-center gap-6">
      <a href="/blog" class="group flex items-center gap-2 text-sm font-bold tracking-tight hover:text-primary transition-colors">
        Read the blog
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    </div>
  </div>
</section>
